# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

#route for angular.js
GET     /public/*file      			controllers.Assets.at(path="/public", file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET		/config						controllers.Application.config(fmt: String ?= "xml")

GET 	/simulations				controllers.Application.simulations(fmt: String ?= "xml")

GET		/observations				controllers.Application.observations(fmt: String ?= "xml")

GET		/repository					controllers.Application.repository

GET		/simulationmodel			controllers.Application.simulationmodel

GET		/simulationrun  			controllers.Application.simulationrun

GET		/numericaloutput  			controllers.Application.numericaloutput

GET		/granule		  			controllers.Application.granule

GET 	/observatory				controllers.Application.observatory

GET		/methods					controllers.Application.methods

GET		/test						controllers.Application.test
