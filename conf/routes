# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET		/config						controllers.Application.config(fmt: String ?= "xml")

GET 	/simulations				controllers.Application.simulations

GET		/observations				controllers.Application.observations

GET		/repository/:name			controllers.Application.repository(name: String)

GET		/test						controllers.Application.test
