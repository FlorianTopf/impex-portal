# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

#route for angular.js
GET     /public/*file      			controllers.Assets.at(path="/public", file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET		/config						controllers.Application.config(fmt: String ?= "xml")

GET 	/simulations				controllers.Application.simulations

GET		/observations				controllers.Application.observations

GET		/repository					controllers.Application.repository

GET		/test						controllers.Application.test
