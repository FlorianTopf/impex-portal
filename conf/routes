# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

#route for angular.js
GET     /public/*file      			controllers.Assets.at(path="/public", file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# route for swagger
GET		/api-docs					controllers.ApiHelpController.getResources

# config routes
GET		/api-docs/config			controllers.ApiHelpController.getResource(path = "/config")
GET		/config						controllers.Config.config(fmt: String ?= "xml")

# preliminary registry routes (will be improved later)
GET		/api-docs/registry			controllers.ApiHelpController.getResource(path = "/registry")
GET		/registry					controllers.Registry.registry

GET 	/registry/simulations	    controllers.Registry.simulations(fmt: String ?= "xml")

GET		/registry/observations		controllers.Registry.observations(fmt: String ?= "xml")

GET		/registry/repository		controllers.Registry.repository

GET		/registry/simulationmodel	controllers.Registry.simulationmodel

GET		/registry/simulationrun  	controllers.Registry.simulationrun

GET		/registry/numericaloutput  	controllers.Registry.numericaloutput

GET		/registry/granule		  	controllers.Registry.granule

GET 	/registry/observatory		controllers.Registry.observatory

# methods sub-routes missing here / route for api-docs
GET		/methods					controllers.Methods.methods

# general testing route
GET		/test						controllers.Application.test
